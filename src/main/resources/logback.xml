<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for stderr -->
    <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- File appender for debugging -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/mcp-server.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDERR" />
        <appender-ref ref="FILE" />
    </root>

    <!-- MCP server specific logging -->
    <logger name="com.mcp.codeanalysis" level="DEBUG" />

    <!-- Third-party libraries -->
    <logger name="com.github.javaparser" level="WARN" />
    <logger name="org.dom4j" level="WARN" />
    <logger name="org.apache.maven" level="WARN" />
</configuration>
